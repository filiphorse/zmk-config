#include <dt-bindings/zmk/matrix_transform.h>

#include "f-layouts.dtsi"

/ {
    chosen {
        zmk,physical-layout = &default_layout;
    };
kscan: kscan {
    compatible = "zmk,kscan-gpio-matrix";
    diode-direction = "row2col";
    wakeup-source;

    col-gpios = <&pro_micro 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                <&pro_micro 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;

    row-gpios = <&pro_micro 5 GPIO_ACTIVE_HIGH>,  // known working row
                <&pro_micro 6 GPIO_ACTIVE_HIGH>;  // row to test
};

default_transform: default_transform {
    compatible = "zmk,matrix-transform";
    columns = <2>;
    rows = <2>;
    map = <
        RC(0,0) RC(0,1)
        RC(1,0) RC(1,1)
    >;
}
};
